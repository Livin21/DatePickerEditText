<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="170dp"
        android:minHeight="30sp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textSize="@dimen/default_text_size"
            android:layout_centerHorizontal="true"
            android:gravity="bottom|center_horizontal"
            android:background="@android:color/transparent"
            android:id="@+id/dateInputEditText"
            android:hint="@string/dd_mm_yyyy"/>

        <com.lmntrx.livin.library.droidawesome.DroidAwesomeImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="&#xf073;"
            android:layout_toEndOf="@id/dateInputEditText"
            android:layout_toRightOf="@id/dateInputEditText"
            android:id="@+id/calendarIcon"
            android:layout_marginTop="5dp"
            app:textSize="@dimen/default_font_awesome_icon_size"
            android:layout_marginStart="@dimen/default_gap"
            android:layout_marginLeft="@dimen/default_gap"
            app:textColor="@color/unSelectedItemColor"
            tools:ignore="SmallSp" />

    </RelativeLayout>


    <View
        android:layout_height="1dp"
        android:layout_width="185dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/fading_edged_stroke"
        android:id="@+id/view" />

</merge>